<?xml version='1.0' encoding='utf-8'?>
<widget id="com.amcolash.pirateflix" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CacheClear">
        <param name="android-package" value="com.anrip.cordova.CacheClear" />
    </feature>
    <name>PirateFlix</name>
    <description>
        A react app, an Express server and a torrent client walk into a container...
    </description>
    <author email="amcolash@gmail.com" href="https://amcolash.com">
        Andrew McOlash
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://home.amcolash.com:3001/*" />
    <allow-navigation href="https://home.amcolash.com:9000/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash density="land-hdpi" src="res/screen/android/splash-land.png" />
    <splash density="land-ldpi" src="res/screen/android/splash-land.png" />
    <splash density="land-mdpi" src="res/screen/android/splash-land.png" />
    <splash density="land-xhdpi" src="res/screen/android/splash-land.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
