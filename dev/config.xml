<?xml version='1.0' encoding='utf-8'?>
<widget id="com.amcolash.pirateflix-dev" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PirateFlix - Dev</name>
    <description>
        A react app, an Express server and a torrent client walk into a container...
    </description>
    <author email="amcolash@gmail.com" href="https://amcolash.com">
        Andrew McOlash
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="https://home.amcolash.com:3001/*" />
    <allow-navigation href="https://home.amcolash.com:9000/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <splash src="res/screen/android/splash-land.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-land.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-land.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-land.png" density="land-xhdpi"/>
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        
        <allow-intent href="market:*" />
    </platform>
</widget>
